<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:text="@string/error_tips"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/error_tv"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/error_reload_tv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/reload"
        android:textColor="@color/color_049486"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:background="@drawable/selector_reload"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/error_tv" />
</RelativeLayout>